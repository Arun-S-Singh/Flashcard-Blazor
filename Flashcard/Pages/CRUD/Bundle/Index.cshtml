@page "/crud/bundle/list"
@model Flashcard.Pages.CRUD.Bundle.IndexModel

@{
    ViewData["Title"] = "Manage Bundle";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Manage Bundle</h1>
<p>
    <a href="/admin">Back to Administrator Page</a>
</p>
<p>
    <a asp-page="Create">Create New Bundle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].BundleState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].SubscriptionPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BundleModel[0].IsPrivate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BundleModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BundleState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPrivate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
